{
  "manifest_version": 3,
  "name": "CodeScope",
  "version": "1.0",
  "description": "Summarizes code, generates flowcharts, and analyzes complexity with Chrome's built-in AI.",
  "permissions": ["contextMenus", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Code AI Analyzer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
